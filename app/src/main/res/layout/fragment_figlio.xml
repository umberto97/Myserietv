<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".fragment_figlio" android:id="@+id/frameLayout2">
    <TextView
            android:text="Titolo"
            android:layout_width="115dp"
            android:layout_height="44dp"
            android:id="@+id/titolo_figlio" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"
            android:textStyle="bold" android:textAllCaps="true"/>
    <TextView
            android:text="Genere:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/titolo_figlio" android:textStyle="bold"
            android:textAllCaps="true" android:textSize="14sp"/>
    <TextView
            android:text="Data:"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:textStyle="bold" android:textAllCaps="true"
            android:textSize="14sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="90dp"
            android:layout_height="21dp"
            android:id="@+id/genere_figlio"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="50dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="88dp"
            android:layout_height="18dp"
            android:id="@+id/data_figlio"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="64dp"/>
</android.support.constraint.ConstraintLayout>